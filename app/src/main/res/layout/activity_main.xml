<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.c.dvorak.MainActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/marta4">



    <Button
        android:text="Play!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:id="@+id/button_a"
        android:background="@color/martablue"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:id="@+id/button_b"
        android:background="@color/martayellow"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="My High Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="446dp"
        android:background="@color/martared"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/button_c"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
